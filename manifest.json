{
  "manifest_version": 3,
  "name": "PayUp Auto Task Bot",
  "version": "1.0",
  "description": "إضافة تقوم تلقائياً بمشاهدة الفيديوهات وتأكيدها في موقع PayUp",
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["https://payup.video/*"],
  "content_scripts": [
    {
      "matches": ["https://payup.video/*"],
      "js": ["script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": 
  icon.png
  }
  }
}
